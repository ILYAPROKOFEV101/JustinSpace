<Window x:Class="JustinSpace.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rocket Launch" Height="450" Width="600"
        Background="Black">
    <Grid>
        <!-- Основной контейнер -->
        <Grid>
            <!-- Панель управления -->
            <StackPanel x:Name="ControlPanel" Orientation="Vertical" Width="200"
                        VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10"
                        Background="#222" Panel.ZIndex="1">
                <TextBlock Text="Введите параметры ступеней:" Foreground="White" Margin="0,0,0,10"/>

                <!-- Ступень 1 -->
                <TextBlock Text="Ступень 1" FontWeight="Bold" Foreground="White"/>
                <TextBox x:Name="Stage1DryMass" ToolTip="Сухая масса" />
                <TextBox x:Name="Stage1FuelMass" ToolTip="Масса топлива" />
                <TextBox x:Name="Stage1FuelConsumption" ToolTip="Расход топлива" Margin="0,0,0,10"/>

                <!-- Ступень 2 -->
                <TextBlock Text="Ступень 2" FontWeight="Bold" Foreground="White"/>
                <TextBox x:Name="Stage2DryMass" ToolTip="Сухая масса" />
                <TextBox x:Name="Stage2FuelMass" ToolTip="Масса топлива" />
                <TextBox x:Name="Stage2FuelConsumption" ToolTip="Расход топлива" Margin="0,0,0,10"/>

                <!-- Ступень 3 -->
                <TextBlock Text="Ступень 3" FontWeight="Bold" Foreground="White"/>
                <TextBox x:Name="Stage3DryMass" ToolTip="Сухая масса" />
                <TextBox x:Name="Stage3FuelMass" ToolTip="Масса топлива" />
                <TextBox x:Name="Stage3FuelConsumption" ToolTip="Расход топлива" Margin="0,0,0,10"/>

                <!-- Кнопка запуска -->
                <Button Content="Запустить ракету" 
                        Click="StartButton_Click" 
                        Background="Green" 
                        Foreground="White"
                        Padding="10,5"/>
            </StackPanel>

            <!-- Кнопки масштабирования -->
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Left" Orientation="Horizontal" Margin="10" Panel.ZIndex="1">
                <Button Content="+" Width="30" Height="30" Click="ZoomInButton_Click" Margin="0,0,5,0"/>
                <Button Content="-" Width="30" Height="30" Click="ZoomOutButton_Click"/>
            </StackPanel>

            <!-- Прокручиваемая область с объектами -->
            <ScrollViewer x:Name="GameScrollViewer" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <!-- Область с объектами (ракета, Земля), которую будем масштабировать -->
                <Canvas x:Name="SceneCanvas" Background="Black" Width="2000" Height="2000" RenderTransformOrigin="0.5,0.5">
                    <!-- Добавляем ScaleTransform для масштабирования -->
                    <Canvas.RenderTransform>
                        <ScaleTransform x:Name="SceneCanvasScaleTransform" ScaleX="1" ScaleY="1" />
                    </Canvas.RenderTransform>

                    <!-- Шар-основание (Земля) -->
                    <Ellipse Canvas.Left="950" Canvas.Top="1800" 
                             Width="100" Height="100" 
                             Fill="Blue" Stroke="White"/>

                    <!-- Куб-ракета -->
                    <Rectangle x:Name="Rocket" 
                               Canvas.Left="985" Canvas.Top="1750" 
                               Width="30" Height="50" 
                               Fill="Red" RadiusX="5" RadiusY="5">
                        <Rectangle.RenderTransform>
                            <TransformGroup x:Name="RocketTransforms">
                                <TranslateTransform x:Name="RocketTranslate" Y="0"/>
                                <RotateTransform CenterX="300" CenterY="350" Angle="0"/>
                            </TransformGroup>
                        </Rectangle.RenderTransform>
                    </Rectangle>
                </Canvas>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>