<UserControl x:Class="JustinSpace.Controls.RocketControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="30" Height="120">
    <Canvas>
        <!-- Корпус -->
        <Rectangle Width="30" Height="80" Fill="#FF5A67" Stroke="#D32F2F" StrokeThickness="1"
                   RadiusX="5" RadiusY="5" Canvas.Left="0" Canvas.Top="10"/>
        
        <!-- Носовая часть -->
        <Polygon Points="0,10 15,0 30,10" Fill="#FFCDD2" Stroke="#D32F2F" StrokeThickness="1"/>
        
        <!-- Сопла -->
        <Rectangle Width="6" Height="15" Fill="#616161" Canvas.Left="3" Canvas.Top="90"/>
        <Rectangle Width="6" Height="15" Fill="#616161" Canvas.Left="12" Canvas.Top="90"/>
        <Rectangle Width="6" Height="15" Fill="#616161" Canvas.Left="21" Canvas.Top="90"/>

        <!-- Пламя -->
        <Path x:Name="RocketFlame" Canvas.Left="5" Canvas.Top="105"
              Data="M0,0 C5,20 25,20 30,0"
              Fill="OrangeRed" Opacity="0.8">
            <Path.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever" AutoReverse="True">
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0.8" To="0.3" Duration="0:0:0.3"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Path.Triggers>
        </Path>

        <!-- Тень -->
        <Canvas.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="5" Color="Black" Opacity="0.5"/>
        </Canvas.Effect>
    </Canvas>
</UserControl>