<Window x:Class="JustinSpace.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добро пожаловать"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Width="800" Height="500"
        Background="Black">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#000000" Offset="0.0"/>
                <GradientStop Color="#111122" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <TextBlock Text="🚀 JustinSpace" 
                       FontSize="36" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       TextAlignment="Center" 
                       Margin="0,0,0,10"/>
            <TextBlock Text="Добро пожаловать в программу моделирования запуска ракеты"
                       FontSize="18" 
                       Foreground="LightGray" 
                       TextAlignment="Center"
                       Margin="0,0,0,30"/>

            <Button Content="СТАРТ" Width="160" Height="50"
                    Background="DarkGreen" Foreground="White" FontSize="18"
                    FontWeight="Bold" Click="StartButton_Click"/>
        </StackPanel>
    </Grid>
</Window>